---
import { getEntry } from "astro:content";

const { data } = await getEntry('footer', 'footer');

---
<footer>
  <div class="copyright">
    <strong>{data.footer.company} &#174; 
      <span id="copyright-year">{data.footer.year}</span>
    </strong> | {data.footer.copyright}
  </div>
  <div class="links">
    {data.links.map(link => (
      <a href={link.link} target="_blank">{link.label}</a>
    ))}
  </div>
</footer>

<style lang="scss">
  @import '../styles/variables.scss';

  .copyright {
    padding: 1.5rem;
    background-color: $yellow;
    text-align: center;
    font-size: pxToRem(14px);
    color: $bg-color;

    span {
      color: inherit;
    }
  }

  .links {
    flex-wrap: wrap;
    background-color: $light-grey;
    font-size: pxToRem(14px);
    color: $foreground-text-color;
    display: flex;
    align-items: center;
    justify-content: center;

    a {
      padding: 1rem;
      display: inline-block;
      text-decoration: none;
      text-align: center;
      color: inherit;
    }
  }
</style>

<script>
  const year = document.getElementById('copyright-year');

  if(year) {
    year.textContent = new Date().getFullYear().toString();
  }
</script>