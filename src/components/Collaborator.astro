---
import { Image } from 'astro:assets';

interface Props {
  avatar: ImageMetadata;
  name: string;
  role: string;
}

const { name, role, avatar } = Astro.props;

---
<div class="collaborator">
  <img src={avatar.src} alt={name} />
  <p class="name">{name}</p>
  <p class="role">{role}</p>
</div>

<style lang="scss">
  @import '../styles/variables.scss';

  img {
    max-width: 100%;
    max-height: 100%;
  }

  .collaborator {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  p {
    text-align: center;
    margin: 0;
  }

  .name {
    margin: 0.5rem 0 0.2rem;
    color: $foreground-title-color;
    font-weight: bold;
    font-size: 16px;
    line-height: normal;

    @include md {
      margin: 1rem 0 0;
      font-size: 30px;
    }
  }

  .role {
    color: $yellow;
    font-size: 14px;
    line-height: normal;

    @include md {
      font-size: 16px;
    }
  }
</style>